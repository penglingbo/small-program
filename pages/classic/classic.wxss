.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.container .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}
.container .header .epsoide {
    margin-top: 4rpx;
    margin-left: 20rpx;
}
.header .like-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-right: 30rpx;
}
.header .like-container .like {
    margin-top: 6rpx;
}
.header .like-container .share-btn {
    margin-top: 22rpx;
    margin-left: 10rpx;
}
.header .like-container .share-btn .share {
    width: 40rpx;
    height: 40rpx;
}
.container .navi {
    position: absolute;
    bottom: 40rpx;
}