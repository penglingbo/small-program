.container { background-color: #f5f5f5; }
.container .head {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
    background-color: #fff;
}
.container .head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}
.container .head .title {
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
    color: #2f2f2f;
}
.container .head .author {
    font-size: 28rpx;
    color: #999;
}
.container .sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    padding: 30rpx;
    width: 690rpx;
    background-color: #fff;
}
.container .sub-container .headline {
    margin-bottom: 20rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
}
.container .sub-container .comment-container {
    display: flex;
    flex-wrap: wrap;
}
.comment-container v-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}
.comment-container > v-tag:last-child > view {
    margin-right: 0;
    margin-bottom: 0;
}
.comment-container v-tag .num {
    margin-left: 10rpx;
    font-size: 22rpx;
    color: #aaa;
}
.container .sub-container .comment {
    text-indent: 62rpx;
    font-weight: 500;
}
.container .detail-container {
    display: flex;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    width: 100%;
    font-size: 28rpx;
    color: #666;
}
.container .detail-container .vertical {
    display: flex;
    flex-direction: column;
}
.container .detail-container .description {
    margin-right: 30rpx;
    color: #999;
}
.post-container {
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    width: 690rpx;
    height: 100rpx;
    background-color: #fff;
    box-shadow: 1px -1px 1px #e3e3e3;
}
.post-container .post-fake {
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    width: 460rpx;
    height: 60rpx;
    font-size: 22rpx;
    border: 1px solid #999;
    border-radius: 15px;
}
.post-container .like-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.post-container .like-container .like {
    margin-right: 30rpx;
}

.posting-container {
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    background-color: #fff;
    z-index: 999;
}
.posting-container .post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 60px;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;    
}
.posting-container .post-header .cancel { color: #666; }
.posting-container .post-header text { padding: 25rpx; }
.posting-container .post-header > text:first-child {
    font-size: 28rpx;
    color: #bbb;
}
.posting-container .comment-container {
    padding: 40rpx 30rpx;
    width: 690rpx;
}
.post {
    margin: 30rpx auto;
    padding-left: 25rpx;
    width: 690rpx;
    height: 56rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
}
.shadow { color: #999 }

.ex-tag1 { background-color: #fffbdd !important; }
.ex-tag2 { background-color: #eefbff !important; }