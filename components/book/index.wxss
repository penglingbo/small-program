.container {
    position: relative;
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
    width: 240rpx;
    height: 360rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}
.container image {
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.container .description { 
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    padding: 5rpx 10rpx 8rpx 15rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 24rpx;
    background-color: #fff;
    border-bottom-left-radius: 2px;
    border-bottom-right-radius: 2px;
}
.container .description .title {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.container .description .author {
    margin-bottom: 10rpx;
    font-size: 20rpx;
    color: #999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.container .description .foot {
    display: flex;
    justify-content: flex-end;
    font-size: 20rpx;
}
.container .description .foot .footer { color: #666; }