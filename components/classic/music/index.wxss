.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.container .classic-img {
    margin-top: 60rpx;
    width: 422rpx;
    height: 422rpx;
    border-radius: 50%;
}
.container .player-img {
    position: relative;
    bottom: 270rpx;
    width: 120rpx;
    height: 120rpx;    
}
.container .tag {
    position: relative;
    bottom: 160rpx;
    right: 310rpx;
    width: 44rpx;
    height: 128rpx;
}
.rotation {
    animation: rotation 12s linear infinite;
}
@keyframes rotation {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}